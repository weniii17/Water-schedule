import 'package:flutter/material.dart';
import 'screens/watering-schedule.dart'; // <-- Import your SchedulePage file

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Indoor Plant AI Scanner',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(
        colorScheme: ColorScheme.fromSeed(seedColor: Colors.green),
        useMaterial3: true,
      ),
      home: const SchedulePage(), // <-- Set SchedulePage as the home screen
    );
  }
}
